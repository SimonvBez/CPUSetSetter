<Window x:Class="CPUSetSetter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:proc="clr-namespace:CPUSetSetter.UI.Tabs.Processes"
        xmlns:masks="clr-namespace:CPUSetSetter.UI.Tabs.Masks"
        mc:Ignorable="d"
        Title="CPU Set Setter"
        Height="547"
        MinHeight="574"
        Width="940"
        MinWidth="700">

    <TabControl>
        <!--Processes Tab-->
        <TabItem>
            <TabItem.Header>
                <TextBlock Text="Processes"/>
            </TabItem.Header>

            <proc:ProcessesTab/>
        </TabItem>

        <!--Masks Tab-->
        <TabItem>
            <TabItem.Header>
                <TextBlock Text="Masks"/>
            </TabItem.Header>

            <masks:MasksTab/>
        </TabItem>

        <!--Rules-->
        <TabItem>
            <TabItem.Header>
                <TextBlock Text="Rules"/>
            </TabItem.Header>

            <TextBlock Text="Rules tab"/>
        </TabItem>
    </TabControl>
</Window>
