<Grid x:Class="CPUSetSetter.UI.Tabs.Rules.RulesTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CPUSetSetter.UI.Tabs.Rules"
      xmlns:config="clr-namespace:CPUSetSetter.Config.Models"
      xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
      d:DataContext="{d:DesignInstance Type=local:RulesTabViewModel}"
      mc:Ignorable="d"
      Margin="5">

    <Grid.RowDefinitions>
        <RowDefinition Height="1.3*"/>
        <RowDefinition Height="35"/>
        <RowDefinition Height="20"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="35"/>
    </Grid.RowDefinitions>

    <!--Program Rules-->
    <DataGrid Grid.Row="0" Margin="0,0,0,10"
              ItemsSource="{Binding ProgramRules, Source={x:Static config:AppConfig.Instance}}"
              AutoGenerateColumns="False"
              RowHeight="24"
              HeadersVisibility="Column">

        <DataGrid.Columns>
            <!--Path column-->
            <DataGridTextColumn Header="Program Rules"
                                Binding="{Binding ProgramPath}"
                                IsReadOnly="True"
                                Width="*"/>

            <!--Core Mask column-->
            <DataGridTemplateColumn Header="Core Mask"
                                    IsReadOnly="True"
                                    Width="120"
                                    SortMemberPath="LogicalProcessorMask.DisplayName">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox ItemsSource="{Binding LogicalProcessorMasks, Source={x:Static config:AppConfig.Instance}}"
                                  SelectedValue="{Binding LogicalProcessorMask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Margin="0,0,5,0"
                Content="Create..."/>

        <Button Grid.Column="1" Margin="5,0,0,0"
                Content="Edit"/>
    </Grid>


    <Separator Grid.Row="2"/>

    <!--Automatic Rules-->
    <DataGrid Grid.Row="3" Margin="0,0,0,10"
              ItemsSource="{Binding AutoRules, Source={x:Static config:AppConfig.Instance}}"
              AutoGenerateColumns="False"
              RowHeight="24"
              HeadersVisibility="Column"
              CanUserSortColumns="False"
              dd:DragDrop.IsDragSource="True"
              dd:DragDrop.IsDropTarget="True">

        <DataGrid.Columns>
            <!--Path column-->
            <DataGridTextColumn Header="Automatic Rules"
                                Binding="{Binding RuleGlob}"
                                IsReadOnly="True"
                                Width="*"/>

            <!--Core Mask column-->
            <DataGridTemplateColumn Header="Core Mask"
                                    IsReadOnly="True"
                                    Width="120"
                                    SortMemberPath="LogicalProcessorMask.DisplayName">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <ComboBox ItemsSource="{Binding LogicalProcessorMasks, Source={x:Static config:AppConfig.Instance}}"
                                  SelectedValue="{Binding LogicalProcessorMask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>

    <Grid Grid.Row="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Margin="0,0,5,0"
                Content="Create..."/>

        <Button Grid.Column="1" Margin="5,0,0,0"
                Content="Edit"/>

        <TextBlock Grid.Column="2" Margin="10,0,0,0">
            <TextBlock.Inlines>
                <Run Text="An Automatic Rule will create a new Program Rule for any matching program. i.e."/>
                <Run Text="C:\Games\**" FontWeight="Bold"/>
                <Run Text="&#x0a;The priority goes from top to bottom, and rules can be moved by drag-and-dropping."/>
            </TextBlock.Inlines>
        </TextBlock>
    </Grid>

</Grid>
