<Window x:Class="CPUSetSetter.UI.Tabs.Masks.CreateMaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPUSetSetter.UI.Tabs.Masks"
        d:DataContext="{d:DesignInstance Type=local:CreateMaskWindowViewModel}"
        mc:Ignorable="d"
        Title="Create a new Mask"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Mask settings">
            <local:MaskEditorControl x:Name="maskEditor"
                                     Margin="5"
                                     BoolMask="{Binding BoolMask}"
                                     Hotkeys="{Binding Hotkeys}"
                                     MaskType="{Binding MaskType}"/>
        </GroupBox>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Mask name:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="7,0,0,0"
                     Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Button Grid.Row="3" Margin="0,10,0,0"
                Content="Create"
                IsEnabled="{Binding CanCreateMask}"
                Command="{Binding CreateMaskCommand}"/>
    </Grid>

</Window>
